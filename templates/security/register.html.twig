{% extends 'base.html.twig' %}

{% block title %}Cr√©er un compte - TripEase{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1606768666853-403c90a981ad?auto=format&fit=crop&w=1600&q=80') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Poppins', sans-serif;
            position: relative;
        }

        /* Ajout d'un overlay bleut√© pour am√©liorer la lisibilit√© */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 123, 138, 0.3); /* Teinte bleut√©e semi-transparente */
            z-index: -1;
        }

        .register-card {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border-radius: 20px;
            padding: 30px;
            animation: fadeSlide 1s ease;
            backdrop-filter: blur(5px);
        }
        .card-header h3 {
            color: #007B8A;
            font-weight: bold;
            font-size: 28px;
        }
        .form-label {
            font-weight: 500;
            color: #333;
        }
        .form-control {
            border-radius: 10px;
        }
        .btn-primary {
            background-color: #007B8A;
            border: none;
            border-radius: 10px;
        }
        .btn-primary:hover {
            background-color: #005f6a;
        }
        .card-footer {
            background-color: transparent;
            font-size: 14px;
        }
        .show-password {
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 38px;
            color: #007B8A;
        }
        .position-relative {
            position: relative;
        }
        @keyframes fadeSlide {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="register-card">
                <div class="card-header text-center">
                    <h3>Bienvenue chez TripEase üåç</h3>
                    <p>Cr√©ez votre compte pour commencer votre aventure ‚úàÔ∏è</p>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(registrationForm.nom, 'Nom') }}
                                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.nom) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(registrationForm.prenom, 'Pr√©nom') }}
                                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.prenom) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.email, 'Adresse e-mail') }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.numTel, 'T√©l√©phone') }}
                            {{ form_widget(registrationForm.numTel, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.numTel) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.adresse, 'Adresse') }}
                            {{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.adresse) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.role, 'R√¥le souhait√©') }}
                            {{ form_widget(registrationForm.role, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.role) }}
                        </div>

                        <div class="mb-3 position-relative">
                            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}
                            {{ form_widget(registrationForm.plainPassword.first, {
                                'attr': {'class': 'form-control', 'id': 'plainPassword'}
                            }) }}
                            <span class="show-password" onclick="togglePassword('plainPassword')">üëÅÔ∏è</span>
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>

                        <div class="mb-3 position-relative">
                            {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe') }}
                            {{ form_widget(registrationForm.plainPassword.second, {
                                'attr': {'class': 'form-control', 'id': 'confirmPassword'}
                            }) }}
                            <span class="show-password" onclick="togglePassword('confirmPassword')">üëÅÔ∏è</span>
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Cr√©er mon compte ‚ú®</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">D√©j√† membre ? <a href="{{ path('app_login') }}">Se connecter</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function togglePassword(fieldId) {
            const input = document.getElementById(fieldId);
            if (input) {
                input.type = (input.type === 'password') ? 'text' : 'password';
            }
        }

        // Ajout d'un √©couteur d'√©v√©nements au clic sur les ic√¥nes üëÅÔ∏è pour les deux champs de mot de passe
        document.querySelectorAll('.show-password').forEach(function(icon) {
            icon.addEventListener('click', function() {
                const fieldId = this.previousElementSibling.id;
                togglePassword(fieldId);
            });
        });
    </script>
{% endblock %}