{% extends 'base.html.twig' %}

{% block title %}Connexion - TripEase{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1535916707207-35f97e715e2c?auto=format&fit=crop&w=1600&q=80') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Poppins', sans-serif;
        }

        .login-card {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            border-radius: 20px;
            padding: 30px;
            animation: fadeIn 1s ease-in-out;
        }

        .card-header h3 {
            color: #007B8A;
            font-weight: bold;
            font-size: 28px;
        }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            background-color: #007B8A;
            border: none;
            border-radius: 10px;
        }

        .btn-primary:hover {
            background-color: #005f6a;
        }

        .card-footer {
            background-color: transparent;
            font-size: 14px;
        }

        .alert {
            border-radius: 10px;
        }

        .show-password {
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 38px;
            color: #007B8A;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-card">
                <div class="card-header text-center">
                    <h3>Connexion √† TripEase ‚úàÔ∏è</h3>
                    <p>Pr√™t √† planifier votre prochaine aventure ?</p>
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Adresse e-mail</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="mb-3 position-relative">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            <span class="show-password" onclick="toggleLoginPassword()">üëÅÔ∏è</span>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">Se connecter</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous ici</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function toggleLoginPassword() {
            const input = document.getElementById("inputPassword");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
{% endblock %}
