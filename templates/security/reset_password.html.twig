{% extends 'base.html.twig' %}

{% block title %}R√©initialisation du mot de passe - TripEase{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1606768666853-403c90a981ad?auto=format&fit=crop&w=1600&q=80') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Poppins', sans-serif;
            position: relative;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 123, 138, 0.3);
            z-index: -1;
        }

        .reset-password-card {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border-radius: 20px;
            padding: 30px;
            animation: fadeSlide 1s ease;
            backdrop-filter: blur(5px);
        }

        .show-password {
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 38px;
            color: #007B8A;
        }

        @keyframes fadeSlide {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="reset-password-card">
                <div class="text-center mb-4">
                    <h2 class="text-primary mb-2">R√©initialisation du mot de passe</h2>
                    <p class="text-muted">Entrez votre code de r√©initialisation et votre nouveau mot de passe</p>
                </div>

                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <form method="post">
                    <div class="mb-3">
                        <label for="resetCode" class="form-label">Code de r√©initialisation</label>
                        <input type="text" 
                               name="resetCode" 
                               id="resetCode" 
                               class="form-control" 
                               required 
                               autofocus
                               placeholder="Entrez le code re√ßu par email">
                    </div>

                    <div class="mb-3 position-relative">
                        <label for="password" class="form-label">Nouveau mot de passe</label>
                        <input type="password" 
                               name="password" 
                               id="password" 
                               class="form-control" 
                               required
                               placeholder="Entrez votre nouveau mot de passe">
                        <span class="show-password" onclick="togglePassword('password')">üëÅÔ∏è</span>
                    </div>

                    <div class="mb-3 position-relative">
                        <label for="confirmPassword" class="form-label">Confirmer le mot de passe</label>
                        <input type="password" 
                               name="confirmPassword" 
                               id="confirmPassword" 
                               class="form-control" 
                               required
                               placeholder="Confirmez votre nouveau mot de passe">
                        <span class="show-password" onclick="togglePassword('confirmPassword')">üëÅÔ∏è</span>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="submit">
                            R√©initialiser le mot de passe
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a href="{{ path('app_login') }}" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i> Retour √† la connexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function togglePassword(fieldId) {
            const input = document.getElementById(fieldId);
            if (input) {
                input.type = (input.type === 'password') ? 'text' : 'password';
            }
        }
    </script>
{% endblock %} 