{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - TripEase{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1606768666853-403c90a981ad?auto=format&fit=crop&w=1600&q=80') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Poppins', sans-serif;
            position: relative;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 123, 138, 0.3);
            z-index: -1;
        }

        .forgot-password-card {
            background-color: rgba(255, 255, 255, 0.95);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border-radius: 20px;
            padding: 30px;
            animation: fadeSlide 1s ease;
            backdrop-filter: blur(5px);
        }

        @keyframes fadeSlide {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="forgot-password-card">
                <div class="text-center mb-4">
                    <h2 class="text-primary mb-2">Mot de passe oublié ?</h2>
                    <p class="text-muted">Entrez votre adresse email pour réinitialiser votre mot de passe</p>
                </div>

                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" 
                               name="email" 
                               id="email" 
                               class="form-control" 
                               required 
                               autofocus
                               placeholder="Entrez votre adresse email">
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="submit">
                            Envoyer le lien de réinitialisation
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a href="{{ path('app_login') }}" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i> Retour à la connexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 