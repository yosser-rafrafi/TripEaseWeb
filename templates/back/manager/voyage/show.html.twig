{% extends 'back/base.html.twig' %}

{% block title %}Détails du Voyage{% endblock %}

{% block body %}
<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">Détails du voyage</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('dashboard') }}"><i class="feather icon-home"></i></a>
                        </li>
                        <li class="breadcrumb-item"><a href="{{ path('app_voyage_index') }}">Voyages</a></li>
                        <li class="breadcrumb-item"><a href="#">Détails</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Voyage </h5>
        </div>
        <div class="card-body">
            <table class="table table-striped mb-0">
                <tbody>
                    <tr>
                        <th class="text-muted">Destination</th>
                        <td>{{ voyage.destination }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Date départ</th>
                        <td>{{ voyage.dateDepart ? voyage.dateDepart|date('Y-m-d') : '-' }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Date retour</th>
                        <td>{{ voyage.dateRetour ? voyage.dateRetour|date('Y-m-d') : '-' }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Budget</th>
                        <td>{{ voyage.budget|number_format(2, '.', ' ') }} DT</td>
                    </tr>
                    <tr>
                        <th class="text-muted">État</th>
                        <td>
                            {% if voyage.etat == 'En cours' %}
                                <span class="badge badge-warning">En cours</span>
                            {% elseif voyage.etat == 'Terminé' %}
                                <span class="badge badge-success">Terminé</span>
                            {% else %}
                                <span class="badge badge-secondary">{{ voyage.etat }}</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="text-muted">Titre</th>
                        <td>{{ voyage.title }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Vol n°</th>
                        <td>{{ voyage.numeroVol }}</td>
                    </tr>
                    <tr>
                        <th class="text-muted">Responsable</th>
                        <td>{{ voyage.user ? voyage.user.nom ~ ' ' ~ voyage.user.prenom : '-' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    {% if voyage.missions|length > 0 %}
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Missions liées</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Titre</th>
                            <th>Lieu</th>
                            <th>Début</th>
                            <th>Fin</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mission in voyage.missions %}
                            <tr>
                                <td>{{ mission.title }}</td>
                                <td>{{ mission.lieu }}</td>
                                <td>{{ mission.dateDebut ? mission.dateDebut|date('Y-m-d H:i') : '-' }}</td>
                                <td>{{ mission.dateFin ? mission.dateFin|date('Y-m-d H:i') : '-' }}</td>
                                <td>
                                    <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="btn btn-sm btn-outline-info">
                                        <i class="feather icon-eye"></i>
                                    </a>
                                    <a href="{{ path('app_mission_edit', {'id': mission.id}) }}" class="btn btn-sm btn-outline-warning">
                                        <i class="feather icon-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <p class="text-muted">Aucune mission associée à ce voyage.</p>
    {% endif %}

    {% if voyage.users|length > 0 %}
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Employés affectés</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in voyage.users %}
                            <tr>
                                <td>{{ user.nom }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <p class="text-muted">Aucun employé affecté à ce voyage.</p>
    {% endif %}

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_voyage_index') }}" class="btn btn-outline-secondary">
            <i class="feather icon-arrow-left"></i> Retour à la liste
        </a>
        <div>
            <a href="{{ path('app_mission_new', { 'voyageId': voyage.id }) }}" class="btn btn-outline-primary me-2">
                <i class="feather icon-plus"></i> Ajouter mission
            </a>
            <a href="{{ path('app_voyage_edit', {'id': voyage.id}) }}" class="btn btn-outline-dark">
                <i class="feather icon-edit"></i> Modifier
            </a>
        </div>
    </div>

    <div class="mt-3">
        {{ include('back/manager/voyage/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
