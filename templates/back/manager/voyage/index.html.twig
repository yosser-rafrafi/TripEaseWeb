{% extends 'back/base.html.twig' %}

{% block title %}Liste des Voyages{% endblock %}

{% block body %}
<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h5 class="m-b-10">Gestion des Voyages</h5>
                    </div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('dashboard') }}"><i class="feather icon-home"></i></a>
                        </li>
                        <li class="breadcrumb-item"><a href="#">Voyages</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des voyages</h5>
            <a href="{{ path('app_voyage_new') }}" class="btn btn-primary">
                <i class="feather icon-plus"></i> Ajouter un voyage
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Destination</th>
                            <th>Date départ</th>
                            <th>Date retour</th>
                            <th>Budget (DT)</th>
                            <th>État</th>
                            <th>Titre</th>
                            <th>Vol n°</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for voyage in voyages %}
                            <tr>
                                <td>{{ voyage.destination }}</td>
                                <td>{{ voyage.dateDepart ? voyage.dateDepart|date('Y-m-d') : '-' }}</td>
                                <td>{{ voyage.dateRetour ? voyage.dateRetour|date('Y-m-d') : '-' }}</td>
                                <td>{{ voyage.budget|number_format(2, '.', ' ') }}</td>
                                <td>
                                    {% if voyage.etat == 'En cours' %}
                                        <span class="badge badge-warning">En cours</span>
                                    {% elseif voyage.etat == 'Terminé' %}
                                        <span class="badge badge-success">Terminé</span>
                                    {% else %}
                                        <span class="badge badge-secondary">{{ voyage.etat }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ voyage.title }}</td>
                                <td>{{ voyage.numeroVol }}</td>
                                <td>
                                    <a href="{{ path('app_voyage_show', {'id': voyage.id}) }}" class="btn btn-sm btn-outline-info">
                                        <i class="feather icon-eye"></i>
                                    </a>
                                    <a href="{{ path('app_voyage_edit', {'id': voyage.id}) }}" class="btn btn-sm btn-outline-warning">
                                        <i class="feather icon-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Aucun voyage trouvé.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
