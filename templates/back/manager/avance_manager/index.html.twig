{% extends 'back/base.html.twig' %}

{% block body %}
<style>
    .clickable-row {
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

    .clickable-row:hover {
        background-color: #f1f1f1;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .btn-sm i {
        margin-right: 4px;
    }

    /* Styles pour les ComboBox */
    .form-select {
        border-radius: 0.375rem;
        height: 38px;
        font-size: 14px;
    }

    /* Styles pour les boutons de tri */
    .btn-sort {
        font-size: 14px;
        padding: 6px 12px;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4">üìã Liste des demandes d‚Äôavances</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="recherche" class="form-control" placeholder="üîç Recherche globale"
                   value="{{ rechercheActuelle }}">
        </div>
        <div class="col-md-2">
            <select name="statut" class="form-select">
                <option value="all" {% if statutActuel == 'all' or not statutActuel %}selected{% endif %}>Tous les statuts</option>
                <option value="en attente" {% if statutActuel == 'en attente' %}selected{% endif %}>‚è≥ En attente</option>
                <option value="Trait√©" {% if statutActuel == 'Trait√©' %}selected{% endif %}>‚úÖ Trait√©</option>
            </select>
        </div>
        <div class="col-md-2">
            <select name="devise" class="form-select">
                <option value="all" {% if deviseActuelle == 'all' or not deviseActuelle %}selected{% endif %}>Toutes devises</option>
                <option value="TND" {% if deviseActuelle == 'TND' %}selected{% endif %}>TND</option>
                <option value="EUR" {% if deviseActuelle == 'EUR' %}selected{% endif %}>EUR</option>
                <option value="USD" {% if deviseActuelle == 'USD' %}selected{% endif %}>USD</option>
            </select>
        </div>
       
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Filtrer</button>
            <a href="{{ path('manager_avances') }}" class="btn btn-outline-secondary">R√©initialiser</a>
        </div>
    </form>

    <!-- Tri par date -->
    <div class="mb-4">
        <button type="button" class="btn btn-outline-secondary btn-sort" id="sortDateAsc">üîº Date Ascendant</button>
        <button type="button" class="btn btn-outline-secondary btn-sort" id="sortDateDesc">üîΩ Date Descendant</button>
    </div>

    <!-- Tableau -->
    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-light">
            <tr>
                <th>Montant demand√© ‚¨áÔ∏è</th>
                <th>Devise</th>
                <th>Motif</th>
                <th>Date de demande</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr class="clickable-row" data-href="{{ path('manager_avance_show', {'id': demande.id}) }}">
                <td>{{ demande.montantDemande }}</td>
                <td>{{ demande.devise }}</td>
                <td>{{ demande.motif|length > 20 ? demande.motif[:20] ~ '...' : demande.motif }}</td>
                <td>{{ demande.dateDemande ? demande.dateDemande|date('d/m/Y') : 'Non sp√©cifi√©e' }}</td>
                <td>
                    {% if demande.statut == 'Trait√©' %}
                        <span class="badge bg-success">‚úÖ Trait√©</span>
                    {% else %}
                        <span class="badge bg-warning text-dark">‚è≥ En attente</span>
                    {% endif %}
                </td>
                <td>
                    {% if demande.statut != 'Trait√©' %}
                        <a href="{{ path('manager_traiter_avance', {'id': demande.id}) }}" class="btn btn-outline-primary btn-sm" onclick="event.stopPropagation();">
                            <i class="bi bi-pencil-square"></i> Traiter
                        </a>
                    {% endif %}
                    <a href="{{ path('manager_avance_frais', {'id': demande.id}) }}" class="btn btn-outline-secondary btn-sm" onclick="event.stopPropagation();">
                        <i class="bi bi-eye"></i> Voir d√©penses
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucune demande trouv√©e.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const rows = document.querySelectorAll(".clickable-row");
        rows.forEach(row => {
            row.addEventListener("click", function () {
                window.location = this.dataset.href;
            });
        });

        // Tri  croissant
        document.getElementById('sortDateAsc').addEventListener('click', function () {
            filterData('date_demande', 'ASC');
        });

        // Tri  d√©croissant
        document.getElementById('sortDateDesc').addEventListener('click', function () {
            filterData('date_demande', 'DESC');
        });
    });

    function filterData(sortBy, order) {
        const params = new URLSearchParams(window.location.search);
        params.set('sortBy', sortBy);
        params.set('order', order);
        window.location.search = params.toString(); // Rafra√Æchit la page avec les nouveaux param√®tres
    }
</script>

{% endblock %}
