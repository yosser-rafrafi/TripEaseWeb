

{% block body %}
<div class="pcoded-container">
    <div class="pcoded-content">
        {# Breadcrumb #}
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Créer une Mission</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="{{ path('dashboard') }}"><i class="feather icon-home"></i></a>
                            </li>
                            <li class="breadcrumb-item"><a href="{{ path('app_mission_index') }}">Missions</a></li>
                            <li class="breadcrumb-item"><a href="#">Créer</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {# Formulaire #}
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Formulaire Mission</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.title) }}
                                    {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre de la mission'}}) }}
                                    {{ form_errors(form.title) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.lieu) }}
                                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Lieu'}}) }}
                                    {{ form_errors(form.lieu) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                                    {{ form_errors(form.description) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.dateDebut) }}
                                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.dateDebut) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.dateFin) }}
                                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.dateFin) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(form.type) }}
                                    {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type de mission'}}) }}
                                    {{ form_errors(form.type) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.duree) }}
                                    {{ form_widget(form.duree, {'attr': {'class': 'form-control', 'placeholder': 'Durée en jours'}}) }}
                                    {{ form_errors(form.duree) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.userId) }}
                                    {{ form_widget(form.userId, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.userId) }}
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather icon-save"></i> Enregistrer
                            </button>
                            <a href="{{ path('app_mission_index') }}" class="btn btn-secondary">
                                <i class="feather icon-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
