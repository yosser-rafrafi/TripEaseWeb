{% extends 'back/base.html.twig' %}

{% block title %}Edit Transport{% endblock %}

{% block body %}
<div class="background-container">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5><a href="{{ path('app_transport_index') }}" class="btn btn-outline-secondary">← Retour à la liste des transports</a></h5>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-primary text-white text-center">
                        <h2 class="mb-0">Modifier le Transport</h2>
                    </div>
                    <div class="card-body p-4">
                        {{ include('back/manager/transport/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.background-container {
    position: relative;
    background-image: url('{{ asset('assets/images/transport/manager_form.jpg') }}');
    background-size: cover;
    background-position: center;
    min-height: 100vh;
}

.background-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: inherit;
    background-size: inherit;
    background-position: inherit;
    filter: blur(8px);
    z-index: -1;
}

.container {
    position: relative;
    z-index: 1;
}

.btn-outline-secondary {
    color: #007bff;
    border: 1px solid #007bff;
}

.btn-outline-secondary:hover {
    background-color: #007bff;
    color: white;
}
</style>
{% endblock %}
