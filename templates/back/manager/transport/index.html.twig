{% extends 'back/base.html.twig' %}

{% block title %}Transport Index{% endblock %}

{% block body %}
     <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5><a href="#" class="btn btn-outline-secondary">‚Üê Retour</a></h5>
            <a href="{{ path('app_transport_new') }}" class="btn btn-primary">+ Create New Transport</a>
        </div>

        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0">Transport List</h2>
            </div>

            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-dark text-center">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Location</th>
                                <th>Type</th>
                                <th>Availability</th>
                                <th>Country</th>
                                <th>Price</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                        {% for transport in transports %}
                            <tr>
                                <td>{{ transport.id }}</td>
                                <td>{{ transport.transportName }}</td>
                                <td class="text-truncate" style="max-width: 150px;">{{ transport.transportDescription }}</td>
                                <td>{{ transport.transportLocation }}</td>
                                <td>{{ transport.transportType|capitalize }}</td>
                                <td>
                                    <span class="badge {% if transport.transportDisponibilite == 'available' %}bg-success{% else %}bg-danger{% endif %}">
                                        {{ transport.transportDisponibilite|capitalize }}
                                    </span>
                                </td>
                                <td>{{ transport.transportPays }}</td>
                                <td>${{ transport.transportPrix|number_format(2, '.', ',') }}</td>
                                <td>{{ transport.latitude }}</td>
                                <td>{{ transport.longitude }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_transport_show', {'id': transport.id}) }}" class="btn btn-info btn-sm">üëÅ Show</a>
                                        <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" class="btn btn-warning btn-sm">‚úè Edit</a>
                                        <form method="post" action="{{ path('app_transport_delete', {'id': transport.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transport.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">üóë Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11" class="text-center text-muted">No transport records found.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
