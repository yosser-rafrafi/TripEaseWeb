{% extends 'back/base.html.twig' %}

{% block title %}Transport Index{% endblock %}

{% block body %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5>
                    {% block LienPrecedent %}
                        <a href="#">Retour</a>
                    {% endblock %}
                </h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Transport List</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a href="{{ path('app_transport_new') }}" class="btn btn-primary">Create New Transport</a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Transport Name</th>
                                    <th>Transport Description</th>
                                    <th>Transport Location</th>
                                    <th>Transport Type</th>
                                    <th>Availability</th>
                                    <th>Country</th>
                                    <th>Price</th>
                                    <th>Latitude</th>
                                    <th>Longitude</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for transport in transports %}
                                <tr>
                                    <td>{{ transport.transportName }}</td>
                                    <td>{{ transport.transportDescription }}</td>
                                    <td>{{ transport.transportLocation }}</td>
                                    <td>{{ transport.transportType }}</td>
                                    <td>{{ transport.transportDisponibilite }}</td>
                                    <td>{{ transport.transportPays }}</td>
                                    <td>{{ transport.transportPrix }}</td>
                                    <td>{{ transport.latitude }}</td>
                                    <td>{{ transport.longitude }}</td>
                                    <td>
                                        <a href="{{ path('app_transport_show', {'id': transport.id}) }}" class="btn btn-info btn-sm">Show</a>
                                        <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                        <form method="post" action="{{ path('app_transport_delete', {'id': transport.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transport.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">No records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
