{% extends 'back/base.html.twig' %}

{% block title %}Transport Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header text-center">
                        <h2>Transport Details</h2>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <h5><a href="{{ path('app_transport_index') }}" class="btn btn-link">Back to list</a></h5>
                        </div>

                        <table class="table table-bordered table-striped">
                            <tbody>
                                <tr><th>Name</th><td>{{ transport.transportName }}</td></tr>
                                <tr><th>Description</th><td>{{ transport.transportDescription }}</td></tr>
                                <tr><th>Location</th><td>{{ transport.transportLocation }}</td></tr>
                                <tr><th>Type</th><td>{{ transport.transportType }}</td></tr>
                                <tr><th>Availability</th><td>{{ transport.transportDisponibilite }}</td></tr>
                                <tr><th>Country</th><td>{{ transport.transportPays }}</td></tr>
                                <tr><th>Price</th><td>{{ transport.transportPrix }}</td></tr>
                                <tr><th>Latitude</th><td>{{ transport.latitude }}</td></tr>
                                <tr><th>Longitude</th><td>{{ transport.longitude }}</td></tr>
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_transport_index') }}" class="btn btn-secondary">Back to list</a>
                            {% block newLinks %}
                                <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" class="btn btn-primary">Edit</a>
                            {% endblock %}
                        </div>

                        <div class="form-group mt-3">
                            {{ include('back/manager/transport/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
