{% extends 'back/base.html.twig' %}

{% block title %}New Transport{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header text-center">
                        <h2>Create New Transport</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                            <div class="form-group mb-4">
                                <label for="{{ form.transport_name.vars.id }}" class="form-label">Transport Name</label>
                                {{ form_widget(form.transport_name, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.transport_description.vars.id }}" class="form-label">Description</label>
                                {{ form_widget(form.transport_description, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.transport_location.vars.id }}" class="form-label">Location</label>
                                {{ form_widget(form.transport_location, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.transport_type.vars.id }}" class="form-label">Type</label>
                                {{ form_widget(form.transport_type, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.transport_disponibilite.vars.id }}" class="form-label">Availability</label>
                                {{ form_widget(form.transport_disponibilite, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.transport_pays.vars.id }}" class="form-label">Country</label>
                                {{ form_widget(form.transport_pays, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.transport_prix.vars.id }}" class="form-label">Price</label>
                                {{ form_widget(form.transport_prix, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.latitude.vars.id }}" class="form-label">Latitude</label>
                                {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group mb-4">
                                <label for="{{ form.longitude.vars.id }}" class="form-label">Longitude</label>
                                {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                <div class="row justify-content-center">
                                    <div class="col-md-6 text-center">
                                        <button type="button" class="btn btn-warning" onclick="window.history.back();">Cancel</button>
                                        <button type="submit" class="btn btn-success ms-2">{{ button_label|default('Save') }}</button>
                                    </div>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
