{% extends 'front/employee_home/index.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Frais liés à l'Avance de Frais: {{ avanceFrai.montantDemande }}  {{ avanceFrai.devise }}</h1>
        
        <div class="card shadow-sm">
            <div class="card-header text-white" style="background-color: #d4edda;">
                <h5 class="mb-0 text-success">Liste des Frais</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Type</th>
                                <th>Montant</th>
                                <th>Date de dépense</th>
                                <th>Justificatif</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for frai in frais %}
                            <tr>
                                <td>{{ frai.type }}</td>
                                <td>{{ frai.montant }}</td>
                                <td>{{ frai.dateDepense ? frai.dateDepense|date('Y-m-d') : '' }}</td>
                                <td>
                                    <a href="{{ path('frai_pdf', {'id': frai.id}) }}" class="btn btn-sm btn-info" style="background-color: #d4edda;">Voir le PDF</a>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="{{ path('app_frai_show', {'id': frai.id}) }}">Voir</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="{{ path('app_frai_edit', {'id': frai.id}) }}">Modifier</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucun frais lié trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a href="{{ path('app_avance_frai_show', {'id': avanceFrai.id}) }}" class="btn btn-secondary">Retour à l'Avance de Frais</a>
        </div>
    </div>
{% endblock %}
