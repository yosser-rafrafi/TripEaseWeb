{% extends 'front/employee_home/index.html.twig' %}

{% block title %}D√©tails du Voyage{% endblock %}

{% block body %}
<style>
    .voyage-container {
        min-height: 700px ;
        display: flex;
        justify-content: space-between;
        gap: 40px;
       margin : 50px;
        padding: 30px;
        border-radius: 16px;
    }

    .info-box, .missions-box {
        background: white;
        padding: 20px;
        border-radius: 12px;
        flex: 1;
        
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);

    }

    .info-title, .mission-title {
        font-size: 24px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 20px;
        border-bottom: 2px solid #8cddcd;
        padding-bottom: 10px;
    }

    .info-item {
        margin-bottom: 12px;
    }

    .info-label {
        font-weight: bold;
        color: #34495e;
    }

    .mission-link {
        display: block;
        margin-bottom: 10px;
        font-weight: 500;
        color: #2980b9;
        text-decoration: none;
    }

    .mission-link:hover {
        text-decoration: underline;
    }

    .back-link {
        display: inline-block;
        margin-top: 30px;
        color: #8cddcd;
        font-weight: bold;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<div class="voyage-container">
    <div class="info-box">
        <div class="info-title">Informations du Voyage</div>

        <div class="info-item"><span class="info-label">Titre :</span> {{ voyage.title }}</div>
        <div class="info-item"><span class="info-label">Destination :</span> {{ voyage.destination }}</div>
        <div class="info-item"><span class="info-label">Date D√©part :</span> {{ voyage.dateDepart ? voyage.dateDepart|date('Y-m-d') : '' }}</div>
        <div class="info-item"><span class="info-label">Date Retour :</span> {{ voyage.dateRetour ? voyage.dateRetour|date('Y-m-d') : '' }}</div>
        <div class="info-item"><span class="info-label">Budget :</span> {{ voyage.budget }} ‚Ç¨</div>
        <div class="info-item"><span class="info-label">√âtat :</span> {{ voyage.etat }}</div>
        <div class="info-item"><span class="info-label">Num√©ro de vol :</span> {{ voyage.numeroVol }}</div>
    </div>

    <div class="missions-box">
        <div class="mission-title">Missions associ√©es</div>
        {% if voyage.missions|length > 0 %}
            {% for mission in voyage.missions %}
                <a class="mission-link" href="{{ path('app_mission_employee_show', {'id': mission.id}) }}">
                    üìå {{ mission.title }}
                </a>
            {% endfor %}
        {% else %}
            <p>Aucune mission associ√©e √† ce voyage.</p>
        {% endif %}
    </div>
</div>

<a href="{{ path('app_my_travels') }}" class="back-link">‚Üê Retour √† la liste</a>
{% endblock %}