{% extends 'front/employee_home/index.html.twig' %}

{% block title %}D√©tails du Voyage{% endblock %}

{% block body %}
<style>
    .map-box {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        flex: 1;
        min-width: 300px;
    }

    #map {
        height: 400px;
        width: 100%;
        border-radius: 8px;
    }

    .voyage-container {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin: 50px;
        padding: 30px;
    }

    .info-box, .missions-box {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        flex: 1;
        min-width: 300px;
    }

    .info-title, .mission-title {
        font-size: 24px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 20px;
        border-bottom: 2px solid #8cddcd;
        padding-bottom: 10px;
    }

    .info-item {
        margin-bottom: 12px;
    }

    .info-label {
        font-weight: bold;
        color: #34495e;
    }

    .mission-link {
        display: block;
        margin-bottom: 10px;
        font-weight: 500;
        color: #2980b9;
        text-decoration: none;
    }

    .mission-link:hover {
        text-decoration: underline;
    }

    .back-link {
        display: inline-block;
        margin-top: 30px;
        color: #8cddcd;
        font-weight: bold;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<div class="voyage-container">
    <div class="info-box">
        <div class="info-title">Informations du Voyage</div>
        <div class="info-item"><span class="info-label">Titre :</span> {{ voyage.title }}</div>
        <div class="info-item"><span class="info-label">Destination :</span> {{ voyage.destination }}</div>
        <div class="info-item"><span class="info-label">Date D√©part :</span> {{ voyage.dateDepart ? voyage.dateDepart|date('Y-m-d') : '' }}</div>
        <div class="info-item"><span class="info-label">Date Retour :</span> {{ voyage.dateRetour ? voyage.dateRetour|date('Y-m-d') : '' }}</div>
        <div class="info-item"><span class="info-label">Budget :</span> {{ voyage.budget }} ‚Ç¨</div>
        <div class="info-item"><span class="info-label">√âtat :</span> {{ voyage.etat }}</div>
        <div class="info-item"><span class="info-label">Num√©ro de vol :</span>
            {% if voyage.flight %}
                <a href="{{ path('app_flight_show', {'id': voyage.flight.id}) }}">
                    {{ voyage.flight.flight_number}}
                </a>
            {% else %}
                <span class="text-muted">Aucun vol li√©</span>
            {% endif %}
        </div>
    </div>

    <div class="missions-box">
        <div class="mission-title">Missions associ√©es</div>
        {% if voyage.missions|length > 0 %}
            {% for mission in voyage.missions %}
                <a class="mission-link" href="{{ path('app_mission_employee_show', {'id': mission.id}) }}">
                    üìå {{ mission.title }}
                </a>
            {% endfor %}
        {% else %}
            <p>Aucune mission associ√©e √† ce voyage.</p>
        {% endif %}
    </div>

    <div class="map-box">
        <div class="info-title">üìç Localisation</div>
        <div id="map"></div>
    </div>
</div>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize map
        var map = L.map('map').setView([48.8566, 2.3522], 13); // Default to Paris

        // Add OpenStreetMap tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '¬© OpenStreetMap contributors'
        }).addTo(map);

        // Get destination from your data
        var destination = "{{ voyage.destination|escape('js') }}";

        // Use OpenStreetMap's Nominatim service for geocoding
        fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(destination)}`)
            .then(response => response.json())
            .then(data => {
                if (data && data.length > 0) {
                    var lat = parseFloat(data[0].lat);
                    var lon = parseFloat(data[0].lon);
                    
                    // Center map on location
                    map.setView([lat, lon], 13);
                    
                    // Add marker
                    L.marker([lat, lon])
                        .addTo(map)
                        .bindPopup(destination)
                        .openPopup();
                }
            })
            .catch(error => {
                console.error('Error fetching location data:', error);
            });
    });
</script>

<a href="{{ path('app_my_travels') }}" class="back-link">‚Üê Retour √† la liste</a>
{% endblock %}