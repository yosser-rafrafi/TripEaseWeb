{% extends 'front/employee_home/index.html.twig' %}

{% block title %}Ajouter une Réservation Hôtelière{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        .form-section {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 25px;
            border: 1px solid #e9ecef;
        }
        .form-section-title {
            color: #2c3e50;
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #dee2e6;
        }
        .form-label {
            font-weight: 500;
            color: #495057;
            font-size: 0.9rem;
        }
        .form-control, .form-select {
            border-radius: 6px;
            padding: 10px 15px;
            border: 1px solid #dfe7f1;
            font-size: 0.9rem;
        }
        .form-control:focus, .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
        }
        .btn-success {
            background-color: #28a745;
            border: none;
            padding: 8px 20px;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.9rem;
        }
        .btn-outline-secondary {
            padding: 8px 20px;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.9rem;
        }
        .btn-outline-danger {
            padding: 8px 20px;
            font-size: 0.9rem;
        }
        .text-muted {
            font-size: 0.8rem;
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Messages flash -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}
                
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h4 text-primary mb-0">
                        <i class="fas fa-calendar-plus me-2"></i>Nouvelle Réservation
                    </h1>
                    <a href="{{ path('app_hotel_list') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>

                <div class="card">
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

                        <!-- Box 1: Informations de base -->
                        <div class="form-section">
                            <h4 class="form-section-title">
                                <i class="fas fa-info-circle me-2"></i>Informations de base
                            </h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.date_reservation, 'Date de réservation') }}
                                        {{ form_widget(form.date_reservation, {
                                            'attr': {
                                                'class': 'form-control datepicker' ~ (form.date_reservation.vars.errors|length ? ' is-invalid' : ''),
                                                'placeholder': 'JJ/MM/AAAA'
                                            }
                                        }) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.date_reservation) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.statut, 'Statut de réservation') }}
                                        {{ form_widget(form.statut, {
                                            'attr': {
                                                'class': 'form-select' ~ (form.statut.vars.errors|length ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.statut) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Box 2: Période de séjour -->
                        <div class="form-section">
                            <h4 class="form-section-title">
                                <i class="fas fa-calendar-day me-2"></i>Période de séjour
                            </h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.date_debut, 'Date d\'arrivée') }}
                                        {{ form_widget(form.date_debut, {
                                            'attr': {
                                                'class': 'form-control datepicker' ~ (form.date_debut.vars.errors|length ? ' is-invalid' : ''),
                                                'placeholder': 'JJ/MM/AAAA'
                                            }
                                        }) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.date_debut) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.date_fin, 'Date de départ') }}
                                        {{ form_widget(form.date_fin, {
                                            'attr': {
                                                'class': 'form-control datepicker' ~ (form.date_fin.vars.errors|length ? ' is-invalid' : ''),
                                                'placeholder': 'JJ/MM/AAAA'
                                            }
                                        }) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.date_fin) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Box 3: Détails hébergement -->
                        <div class="form-section">
                            <h4 class="form-section-title">
                                <i class="fas fa-hotel me-2"></i>Détails de l'hébergement
                            </h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.hotel, 'Établissement hôtelier') }}
                                        {{ form_widget(form.hotel, {
                                            'attr': {
                                                'class': 'form-select' ~ (form.hotel.vars.errors|length ? ' is-invalid' : '')
                                            }
                                        }) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.hotel) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.chambre, 'Type de chambre') }}
                                        {{ form_widget(form.chambre, {
                                            'attr': {
                                                'class': 'form-select' ~ (form.chambre.vars.errors|length ? ' is-invalid' : ''),
                                                'disabled': form.vars.value.hotel is null
                                            }
                                        }) }}
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.chambre) }}
                                        </div>
                                        <small class="text-muted">Sélectionnez d'abord un hôtel</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="reset" class="btn btn-outline-danger">
                                <i class="fas fa-eraser me-2"></i>Réinitialiser
                            </button>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Réserver
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialisation des datepickers
            flatpickr('.datepicker', {
                locale: 'fr',
                dateFormat: 'd/m/Y',
                enableTime: false,
                minDate: 'today'
            });

            // Gestion du champ chambre dépendant de l'hôtel
            const hotelSelect = document.getElementById('{{ form.hotel.vars.id }}');
            const chambreSelect = document.getElementById('{{ form.chambre.vars.id }}');

            if (hotelSelect && chambreSelect) {
                hotelSelect.addEventListener('change', function() {
                    if (this.value) {
                        chambreSelect.disabled = false;
                    } else {
                        chambreSelect.disabled = true;
                        chambreSelect.value = '';
                    }
                });
            }
        });
    </script>
{% endblock %}