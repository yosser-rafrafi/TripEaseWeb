
<!-- Delete Button (triggers modal) -->
<button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ reservationhotel.id_reservation }}">
    <i class="fas fa-trash-alt me-1"></i> Delete
</button>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal{{ reservationhotel.id_reservation }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-exclamation-circle text-danger fs-3 me-3"></i>
                    <div>
                        <h6 class="mb-1">Are you sure you want to delete this reservation?</h6>
                        <p class="small text-muted mb-0">Reservation ID: #{{ reservationhotel.id_reservation }}</p>
                    </div>
                </div>
                <div class="alert alert-warning small mb-0">
                    <i class="fas fa-info-circle me-2"></i>This action cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i> Cancel
                </button>
                <form method="post" action="{{ path('app_reservationhotel_delete', {'id_reservation': reservationhotel.id_reservation }) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservationhotel.id_reservation) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Confirm Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>