{% extends 'front/employee_home/index.html.twig' %}

{% block styles %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Styles spécifiques au formulaire d'avis */
        .rating-container {
            background: white;
            border-radius: 10px;
            padding: 2rem;
            margin: 2rem auto;
            max-width: 800px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        
        .star-rating {
            display: flex;
            justify-content: center;
            gap: 5px;
            margin: 1.5rem 0;
        }
        
        .star-rating input {
            display: none;
        }
        
        .star-rating label {
            font-size: 2.5rem;
            color: #ddd;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .star-rating input:checked ~ label,
        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: #ffc107;
        }
        
        .comment-box {
            min-height: 150px;
        }
    </style>
{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="rating-container">
            <h2 class="text-center mb-4">Donnez votre avis</h2>
            
            {{ form_start(form) }}
            
                <div class="mb-4">
                    {{ form_label(form.commentaire, 'Votre commentaire', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control comment-box', 'rows': 5}}) }}
                </div>
                
                <div class="mb-4 text-center">
                    <p class="mb-2">Votre note :</p>
                    <div class="star-rating">
                        {% for i in 5..1 %}
                            <input type="radio" id="star{{ i }}" name="avi[note]" value="{{ i }}" {{ form.note.vars.value == i ? 'checked' : '' }}>
                            <label for="star{{ i }}"><i class="fas fa-star"></i></label>
                        {% endfor %}
                    </div>
                    {{ form_widget(form.note, {'attr': {'class': 'd-none'}}) }}
                </div>
                
                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="fas fa-paper-plane me-2"></i> Publier votre avis
                </button>
            
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        // Synchronisation des étoiles avec le champ caché
        document.querySelectorAll('.star-rating input').forEach(star => {
            star.addEventListener('change', function() {
                document.getElementById('{{ form.note.vars.id }}').value = this.value;
            });
        });
        
        // Validation du commentaire
        document.getElementById('{{ form.commentaire.vars.id }}').addEventListener('input', function() {
            if (this.value.length < 20) {
                this.setCustomValidity('Veuillez écrire au moins 20 caractères');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
{% endblock %}