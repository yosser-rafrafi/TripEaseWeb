{% extends 'front/employee_home/index.html.twig' %}

{% block title %}Reservation Details{% endblock %}
{% block nav %}
    <ul>
        <li><a href="{{ path('app_employee_home') }}" class="active">Home</a></li>
        <li><a href="{{ path('app_my_travels') }}">Mes voyages</a></li>
        <li><a href="{{ path('app_expenses') }}">Expenses</a></li>

        <li class="dropdown">
            <a href="#"><span>Réservation</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
                <li><a href="{{ path('app_transport_list') }}">Transport</a></li>
                <li><a href="{{ path('app_hotel_list') }}">Hôtel</a></li>
            </ul>
        </li>

        <li><a href="{{ path('app_statut_index') }}">Forum</a></li>

        <li class="dropdown">
            <a href="#"><span>Mon compte</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
                <li><a href="{{ path('app_user_settings') }}">Paramètres</a></li>
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
            </ul>
        </li>

        <!-- Notification Bell and Dropdown -->
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Notifications <span class="badge bg-danger" id="notificationCount">{{ notifications|length }}</span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="notificationDropdown" id="notificationList">
                {% if notifications|length > 0 %}
                    {% for notification in notifications %}
                        <li><a class="dropdown-item" href="#">{{ notification.message }} <small>{{ notification.createdAt|date('Y-m-d H:i:s') }}</small></a></li>
                    {% endfor %}
                {% else %}
                    <li><a class="dropdown-item" href="#">Aucune notification</a></li>
                {% endif %}
            </ul>
        </div>

    </ul>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <img src="{{ asset('assets/images/transport/employe.png') }}" alt="Transport Image" class="img-fluid rounded shadow-lg" style="max-height: 300px; object-fit: cover; width: 100%;">
            </div>
        </div>
    
        <div class="page-title">
            <div class="title_left">
                <a href="{{ path('app_reservationtransport_index') }}" class="btn" style="background: linear-gradient(to right, #4e73df, #1cc88a); color: white;">
                    <i class="fa fa-calendar-check me-1"></i> ← Back to Reservation List
                </a>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Reservation Details</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table table-striped table-bordered table-hover table-sm">
                            <tr>
                                <th>ID</th>
                                <td>{{ reservationtransport.id }}</td>
                            </tr>
                            <tr>
                                <th>Employee</th>
                                <td>
                                    {% if reservationtransport.employe %}
                                        {{ reservationtransport.employe.name ?? 'N/A' }}  
                                    {% else %}
                                        Not assigned
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Transport</th>
                                <td>
                                    {% if reservationtransport.transport %}
                                        {{ reservationtransport.transport.transportName }}
                                    {% else %}
                                        <em>Not linked</em>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Date</th>
                                <td>{{ reservationtransport.dateReservation|date('Y-m-d H:i') }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>{{ reservationtransport.typeReservation }}</td>
                            </tr>
                            <tr>
                                <th>Priority</th>
                                <td>{{ reservationtransport.prioriteReservation }}</td>
                            </tr>
                            <tr>
                                <th>Notes</th>
                                <td>{{ reservationtransport.notesReservation }}</td>
                            </tr>
                        </table>

                        <a href="{{ path('app_reservationtransport_edit', {'id': reservationtransport.id}) }}" class="btn btn-sm btn-outline-secondary">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <a href="{{ path('app_reservationtransport_index') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Notification Section #}
    <div id="notification-container"></div>

    {# FullCalendar JS et CSS pour la fonctionnalité de calendrier #}
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/moment@2.27.0/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                selectable: true,
                selectHelper: true,
                events: [
                    {
                        title: 'Événement Exemple',
                        start: '2025-04-07',
                        end: '2025-04-07'
                    }
                ],
                select: function (start, end) {
                    let selectedDate = start.format('YYYY-MM-DD');
                    $('#reservation_date').val(selectedDate); // Adjust the ID if needed
                    $('#calendar').fullCalendar('unselect');
                }
            });
        });

        {# Adding the notification setup #}
        const eventSource = new EventSource("{{ mercure('/reservation/updates')|escape('js') }}");

        eventSource.onmessage = event => {
            const data = JSON.parse(event.data);
            displayNotification(data);
        };

        function displayNotification(data) {
            const notificationContainer = document.getElementById('notification-container');
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.innerHTML = `<strong>Nouvelle réservation:</strong> ${data.message}`;
            
            notificationContainer.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 5000); // Remove notification after 5 seconds
        }
    </script>

    <style>
        .btn-gradient {
            background: linear-gradient(to right, #4e73df, #1cc88a);
            color: white;
        }
        .card {
            border: none;
            border-radius: 10px;
        }
        .shadow {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-control, .form-select {
            border-radius: 5px;
        }

        /* Style for notifications */
        #notification-container {
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 1050;
        }

        .notification {
            background-color: #4e73df;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            margin-bottom: 10px;
            font-size: 14px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>

{% endblock %}

{% block footer %}{% endblock %}
