{% extends 'front/employee_home/index.html.twig' %}

{% block title %}Liste des Réservations{% endblock %}

{% block nav %}
    <ul>
        <li><a href="{{ path('app_employee_home') }}" class="active">Home</a></li>
        <li><a href="{{ path('app_my_travels') }}">Mes voyages</a></li>
        <li><a href="{{ path('app_expenses') }}">Expenses</a></li>

        <li class="dropdown">
            <a href="#"><span>Réservation</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
                <li><a href="{{ path('app_transport_list') }}">Transport</a></li>
                <li><a href="{{ path('app_hotel_list') }}">Hôtel</a></li>
            </ul>
        </li>

        <li><a href="{{ path('app_statut_index') }}">Forum</a></li>

        <li class="dropdown">
            <a href="#"><span>Mon compte</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
            <ul>
                <li><a href="{{ path('app_user_settings') }}">Paramètres</a></li>
                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
            </ul>
        </li>

        <!-- Notification Bell and Dropdown -->
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Notifications <span class="badge bg-danger" id="notificationCount">{{ notifications|length }}</span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="notificationDropdown" id="notificationList">
                {% if notifications|length > 0 %}
                    {% for notification in notifications %}
                        <li><a class="dropdown-item" href="#">{{ notification.message }} <small>{{ notification.createdAt|date('Y-m-d H:i:s') }}</small></a></li>
                    {% endfor %}
                {% else %}
                    <li><a class="dropdown-item" href="#">Aucune notification</a></li>
                {% endif %}
            </ul>
        </div>

    </ul>
{% endblock %}

{% block body %}
<div class="container mt-4">

    {# Hero Image Section #}
    <div class="row mb-4">
        <div class="col-12">
            <figure class="text-center">
                <img src="{{ asset('assets/images/transport/employe.png') }}" 
                     alt="Image de Transport" 
                     class="img-fluid rounded-3 shadow-lg object-fit-cover" 
                     style="max-height: 300px; width: 100%;">
            </figure>
        </div>
    </div>
    
    {# Page Header with Back Button #}
    <header class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-primary">Liste des Réservations</h1>
        <a href="{{ path('app_transport_list') }}" 
           class="btn btn-gradient-primary rounded-pill px-4">
            <i class="fas fa-calendar-check me-2"></i>Retour à la Liste des Transports
        </a>
    </header>

    {# Main Content #}
    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light-blue text-white">
                        <tr>
                            <th scope="col" class="ps-4 py-3">Transport</th>
                            <th scope="col" class="py-3">Date</th>
                            <th scope="col" class="py-3">Type</th>
                            <th scope="col" class="py-3">Statut de Paiement</th>
                            <th scope="col" class="py-3">Priorité</th>
                            <th scope="col" class="py-3">Notes</th>
                            <th scope="col" class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in reservationtransports %}
                            <tr class="border-bottom border-light">
                                <td class="ps-4 py-3">
                                    <span class="fw-medium">{{ reservation.transport ? reservation.transport.transportName : '<em class="text-muted">Non lié</em>'|raw }}</span>
                                </td>
                                <td class="py-3">
                                    <span class="text-dark">{{ reservation.dateReservation|date('Y-m-d H:i') }}</span>
                                </td>
                                <td class="py-3">
                                    <span class="badge bg-info bg-opacity-10 text-info">{{ reservation.typeReservation }}</span>
                                </td>
                                <td class="py-3">
                                   <span class="badge bg-secondary">{{ reservation.statusDePaiement }}</span>
                                </td>

                                <td class="py-3">
                                    {% set priorityClass = {
                                        'High': 'bg-danger bg-opacity-10 text-danger',
                                        'Medium': 'bg-warning bg-opacity-10 text-warning',
                                        'Low': 'bg-success bg-opacity-10 text-success'
                                    }[reservation.prioriteReservation] ?? 'bg-secondary bg-opacity-10' %}

                                    <span class="badge {{ priorityClass }}">{{ reservation.prioriteReservation }}</span>
                                </td>
                                <td class="py-3" style="max-width: 200px;">
                                    <div class="text-truncate" title="{{ reservation.notesReservation }}">
                                        {{ reservation.notesReservation }}
                                    </div>
                                </td>

                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_reservationtransport_show', {'id': reservation.id}) }}"
                                           class="btn btn-outline-primary rounded-2 px-3"
                                           title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_reservationtransport_edit', {'id': reservation.id}) }}"
                                           class="btn btn-outline-secondary rounded-2 px-3"
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-5">
                                    <i class="fas fa-calendar-times fa-2x mb-3"></i>
                                    <p class="h5">Aucune réservation trouvée</p>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-gradient-primary {
            background: linear-gradient(to right, #4e73df, #1cc88a);
            color: white;
            border: none;
            transition: all 0.3s ease;
        }
        
        .btn-gradient-primary:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .bg-light-blue {
            background-color: #4e73df;
        }
        
        .object-fit-cover {
            object-fit: cover;
        }
        
        .table th {
            white-space: nowrap;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .badge {
            padding: 0.35em 0.65em;
            font-weight: 500;
        }
        
        .border-light {
            border-color: #f8f9fa !important;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        const eventSource = new EventSource("{{ mercure('/reservation/updates')|escape('js') }}");

        eventSource.onmessage = event => {
            const data = JSON.parse(event.data);
            alert('Message reçu de Mercure: ' + JSON.stringify(data));
        };
    </script>
{% endblock %}
