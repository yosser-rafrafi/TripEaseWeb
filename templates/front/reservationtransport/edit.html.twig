{% extends 'front/employee_home/index.html.twig' %}

{% block title %}Modifier la Réservation{% endblock %}

{% block nav %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <img src="{{ asset('assets/images/transport/employe.png') }}" alt="Image de Transport" class="img-fluid rounded shadow-lg" style="max-height: 300px; object-fit: cover; width: 100%;">
        </div>
    </div>

    <div class="page-title mb-4">
        <div class="title_left">
            <a href="{{ path('app_my_travels') }}" class="btn btn-gradient">
                <i class="fa fa-calendar-check me-1"></i> Retour à Mes Voyages
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h2 class="h5 mb-0">Modifier la Réservation</h2>
                </div>
                <div class="card-body">
                    {{ include('front/reservationtransport/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/moment@2.27.0/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>

<script>
    // Notifications via Mercure
    const eventSource = new EventSource("{{ mercure('/reservation/updates')|escape('js') }}");

    eventSource.onmessage = event => {
        const data = JSON.parse(event.data);
        displayNotification(data);
    };

    function displayNotification(data) {
        const notificationContainer = document.getElementById('notification-container');
        const notification = document.createElement('div');
        notification.className = 'notification';
        notification.innerHTML = `<strong>Nouvelle réservation:</strong> ${data.message}`;
        
        notificationContainer.appendChild(notification);

        setTimeout(() => {
            notification.remove();
        }, 5000);
    }
</script>

<style>
    .btn-gradient {
        background: linear-gradient(to right, #4e73df, #1cc88a);
        color: white;
    }
    .card {
        border: none;
        border-radius: 10px;
    }
    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .form-control, .form-select {
        border-radius: 5px;
    }

    #notification-container {
        position: fixed;
        top: 10px;
        right: 10px;
        z-index: 1050;
    }

    .notification {
        background-color: #4e73df;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        margin-bottom: 10px;
        font-size: 14px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
{% endblock %}

{% block footer %}{% endblock %}
