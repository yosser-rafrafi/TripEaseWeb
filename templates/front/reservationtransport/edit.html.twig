{% extends 'front/employee_home/index.html.twig' %}

{% block title %}Edit Reservation{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="page-title mb-3">
        <h5><a href="{{ path('app_reservationtransport_index') }}">‚Üê Back to Reservation List</a></h5>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="h5 mb-0">Edit Reservation</h2>
                </div>

                <div class="card-body">
                    {{ include('front/reservationtransport/_form.html.twig', {'button_label': 'Update'}) }}
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-warning" onclick="window.history.back();">Cancel</button>
                    <button type="submit" form="reservationtransport_form" class="btn btn-primary">
                        {{ button_label|default('Save') }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
