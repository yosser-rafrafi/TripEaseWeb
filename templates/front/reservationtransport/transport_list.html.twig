{% extends 'front/employee_home/index.html.twig' %}

{% block title %}Transport List{% endblock %}

{% block body %}
<main class="main">
    <div class="container">
        <div class="page-title">
            <div class="title_left">
                <h5><a href="{{ path('app_reservationtransport_index') }}">Reservation List</a></h5>
            </div>
        </div>

        <div class="clearfix my-3"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Available Transports</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Transport Name</th>
                                    <th>Description</th>
                                    <th>Location</th>
                                    <th>Type</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for transport in transports %}
                                    <tr>
                                        <td>{{ transport.transportName }}</td>
                                        <td>{{ transport.transportDescription }}</td>
                                        <td>{{ transport.transportLocation }}</td>
                                        <td>{{ transport.transportType }}</td>
                                        <td>{{ transport.transportPrix }} â‚¬</td>
                                        <td>
                                            <a href="{{ path('app_reservationtransport_new', {'transport_id': transport.id}) }}" class="btn btn-primary btn-sm">Book</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No transports available.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}

{% block footer %}{% endblock %}
