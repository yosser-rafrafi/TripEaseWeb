{% extends 'front/employee_home/index.html.twig' %}

{% block title %}New Reservation{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="page-title mb-3">
        <h5><a href="{{ path('app_transport_list') }}">‚Üê Back to Transport List</a></h5>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="h5 mb-0">Create New Reservation</h2>
                </div>
                <div class="card-body">
                    <!-- Include the reservation form -->
                    {{ include('front/reservationtransport/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="h5 mb-0">Choose a Reservation Date</h2>
                </div>
                <div class="card-body">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </div>
</div>

{# FullCalendar JS and CSS for calendar functionality #}
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/moment@2.27.0/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.js"></script>

<script>
    $(document).ready(function () {
        $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay'
            },
            selectable: true,
            selectHelper: true,
            events: [
                {
                    title: 'Sample Event',
                    start: '2025-04-07',
                    end: '2025-04-07'
                }
            ],
            select: function (start, end) {
                let selectedDate = start.format('YYYY-MM-DD');
                $('#reservation_date').val(selectedDate); // Adjust ID as needed
                $('#calendar').fullCalendar('unselect');
            }
        });
    });
</script>
{% endblock %}

{% block footer %}{% endblock %}
