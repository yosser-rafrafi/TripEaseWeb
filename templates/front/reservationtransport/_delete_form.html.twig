<form method="post"
      action="{{ path('app_reservationtransport_delete', {'id': reservationtransport.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this reservation?');"
      class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservationtransport.id) }}">
    <button class="btn btn-danger">🗑️ Delete</button>
</form>
